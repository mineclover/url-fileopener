{
  "name": "@context-action/fopen-cli",
  "version": "1.2.3",
  "packageManager": "pnpm@10.14.0",
  "type": "module",
  "license": "MIT",
  "description": "CLI tool for opening files via custom URL scheme",
  "bin": {
    "fopen": "./dist/bin-simple.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mineclover/url-fileopener"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "mkdir -p dist/bin && node esbuild.config.cjs && node scripts/copy-package-json.js",
    "build:dev": "mkdir -p dist/bin && node esbuild.config.cjs --dev && node scripts/copy-package-json.js",
    "build:analyze": "mkdir -p dist/bin && node esbuild.config.cjs --analyze && node scripts/copy-package-json.js",
    "clean": "rm -rf dist/*",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs --fix",
    "copy-package-json": "node scripts/copy-package-json.js",
    "prebuild": "pnpm clean",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "eslint-plugin-codegen": "^0.33.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "ejs": "^3.1.8",
    "joi": "^17.13.3",
    "plist": "^3.1.0",
    "winreg": "^1.2.5"
  }
}
